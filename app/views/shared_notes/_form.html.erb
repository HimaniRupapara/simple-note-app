<%= form_with(model: [@note, @note.shared_notes.build ], remote: true ) do |f| %>
<div class="modal" id="newSharedNoteModal">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">ShareNote</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <%= f.hidden_field :shared_by_id, :value => current_user.id %>
        <div class="field">
          <p>
            <%= f.text_field :email,placeholder: " email" ,class: "form-control shared_note_email" %></p>
        </div>
        <div class="field">
          <p><%= f.collection_select :permission_id, Permission.all, :id, :name, prompt: "Permission" %></p>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= submit_tag "Share" ,class: "btn btn-color",id: "shared_note"%>
      </div>
    </div>
  </div>
</div>
<% end %>
