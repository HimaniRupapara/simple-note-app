<p id="notice"><%= notice %></p>

<h1>Shared Notes</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Note</th>
      <th>Permission</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shared_notes.each do |shared_note| %>
      <tr>
        <td><%= shared_note.email %></td>
        <td><%= shared_note.note %></td>
        <td><%= shared_note.permission %></td>
        <td><%= link_to 'Show', shared_note %></td>
        <td><%= link_to 'Edit', edit_shared_note_path(shared_note) %></td>
        <td><%= link_to 'Destroy', shared_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shared Note', new_shared_note_path %>
