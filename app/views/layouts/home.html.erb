<!DOCTYPE html>
<html>
  <head>
    <title>SimpleNoteApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'home', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'home', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'common', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'common', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div id="homeLayout">
      <div class="container-fluid">
        <% flash.each do |key, value| %>
          <% if key=='notice' %>
            <div class="alert alert-success" role="alert">
              <div class="header"><%= value %></div>
            </div>
          <% end %>
          <% if key=='error' %>
            <div class="alert alert-danger" role="alert">
              <div class="header"><%= value %></div>
            </div>
          <% end %>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
