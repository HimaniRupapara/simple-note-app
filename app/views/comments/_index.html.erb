<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#newCommentModal">Add Comment</button>
<div id="comment_container">
  <%= render @comments %>
</div>

<%= form_with(model: [ @note, @note.comments.build ], remote: true) do |f| %>
<!-- Modal -->
<div class="modal" id="newCommentModal">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Add Post</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <%= f.hidden_field :note_id %>
        <%= f.hidden_field :commented_by_id, :value => current_user.id %>
        <div class="field">
          <p><%= f.text_field :body ,placeholder: " Body" ,class: "form-control body_text"%></p>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= submit_tag "Add" ,class: "btn btn-primary",id: "addcomment"%>

      </div>
    </div>

  </div>
</div>
<% end %>
