<!DOCTYPE html>
<html>
  <head>
    <title>SimpleNoteApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'common', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'common', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'user', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'mCustomScrollbar', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'pagination', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'user', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'mCustomScrollbar', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'pagination', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div id="userLayout">
      <div class="wrapper">

        <!-- Sidebar -->
        <nav id="sidebar">
          <%= render 'layouts/left_side_menu' %>
        </nav>

        <!-- Page Content -->

        <div style="width: 100%;" id="content">
          <nav class="navbar navbar-expand-lg navbar-dark  header_background_color ">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Profile</a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <a class="dropdown-item" href="#">Details</a>
                  <a class="dropdown-item"><%= link_to 'LogOut',destroy_user_session_path, method: :delete %></a>
                </div>
              </li>
            </ul>
          </nav>
          <div class="container">
            <div class="row">
              <div class="col-sm-12">
                <%= yield %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
