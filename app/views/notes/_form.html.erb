<%= form_for(note , remote: true ) do |f| %>

<!-- Modal -->
<div class="modal" id="myupdateNote_<%= note.id %>">
<div class="modal-dialog">

  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Edit Note</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <div class="field">
        <p><%= f.text_field :title ,placeholder: " Title" ,class: "form-control "%></p>
      </div>
      <div class="field">
        <p><%= f.text_field :description ,placeholder: " Description" ,class: "form-control "%></p>
      </div>
      <div class="field">
        <p><%= f.text_field :tag_list ,:value => note.tag_list.map { |t| t }.join(', '), placeholder: " tags with comma seperated" ,class: "form-control "%></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= submit_tag "Update" ,class: "btn btn-color",id: "updateNote" %>
      </div>
    </div>
  </div>
</div>

</div>
<% end %>
